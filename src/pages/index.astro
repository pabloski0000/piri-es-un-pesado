---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"
import LinkedInIcon from "src/images/LinkedInIcon.astro";
import Image from "astro/components/Image.astro";
import MailIcon from "src/images/MailIcon.astro";
import GitHubIcon from "../images/GitHubIcon.astro"
import ListaDeLaCompraFoto from "../images/lista-de-la-compra-foto2.png"
import RapidjobsSnapshot from "../../public/rapidjobs-snapshot2.jpg"
import PersonalPhoto from "../../public/foto-personal-recortada.jpg"
import EstadosUnidos from "../../public/bandera-redondeada-estados-unidos.png"
import Espanya from "../../public/bandera-redondeada-espanya.png"
import Experience from "@components/Experience.astro";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const idiomaByDefault = "espanyol"
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="elegir-idioma">
    <div class="interruptores-para-idioma idioma-espanyol idioma-seleccionado">
      <Image class={"banderas"} alt={"Bandera de España"} src={Espanya}/>
    </div>
    <div class="interruptores-para-idioma idioma-ingles">
      <Image class={"banderas"} alt={"Bandera de Estados Unidos"} src={EstadosUnidos}/>
    </div>
  </div>
  <main class:list={[idiomaByDefault]}>
    <div class="presentation">
      <div class="header">
        <div class="white-space"></div>
        <div class="foto-container-recortada">
          <!-- <img class="foto-recortada" src="../../public/foto-personal-recortada.jpg"/> -->
           <Image class={"foto-recortada"} alt={"Personal photo"} src={PersonalPhoto}/>
        </div>
      </div>
      <div class="icons-bar">
        <a href="mailto:plajommj000@gmail.com" target="_blank" class="icon-container">
          <MailIcon class="icon mail-icon"/>
        </a>
        <a href="https://www.linkedin.com/in/pablo-mendez-jimenez-33349a18b/" target="_blank" class="icon-container">
          <LinkedInIcon class="icon"/>
        </a>
        <a href="https://github.com/pabloski0000" target="_blank" class="icon-container">
          <GitHubIcon class="icon github-icon"/>
        </a>
      </div>
      <h1 class="text-5xl font-bold mb-3 name">Pablo Méndez</h1>
      <!--<div class="title">
        <h1 class="text-5xl font-bold">I'm Manuel Ernesto</h1>
        <div class="foto-container">
          <img class="foto" src="/profile.webp"/>
        </div>
      </div>-->
      <!-- <div class="text-3xl font-bold py-3 mb-1 pb-0">Desarrollador Full Stack y Android</div> -->
      <div class="pb-2 description">
        <p class="text-lg espanyol">
          2 años de <b>experiencia</b> como desarrollador <b>Full-Stack</b> y <b>Android</b>. Track record de desarrollo de productos de software para el sector público y privado. Experiencia tanto empresarial como freelance a niveles nacional e internacional.
        </p>
        <p class="text-lg ingles">
          2 years of <b>experience</b> as a <b>Full-Stack</b> and <b>Android</b> developer. Track record of software product development for the public and private sector. Both business and freelance experience at national and international levels.
        </p>
      </div>
    </div>
    <div class="experience">
      <Experience/>
    </div>
  </main>
</BaseLayout>

<style is:global>
  main.espanyol .ingles {
    display: none;
  }
  main.ingles .espanyol {
    display: none;
  }
</style>

<style>
  main {
    width: 50%;
    margin: 0 auto;
    padding-top: 32px;
  }
  .header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    place-items: center;
    margin: 0 auto 30px auto;
  }
  .presentation {
    margin-bottom: 5rem;
  }
  .elegir-idioma {
    position: fixed;
    right: 10%;
    top: 5%;
  }
  .idioma-espanyol, .idioma-ingles {
    display: inline-block;
  }
  .idioma-espanyol {
    border-radius: 17px 0 0 17px;
  }
  .idioma-ingles {
    border-radius: 0 17px 17px 0;
  }
  .idioma-seleccionado {
    background-color: blue;
  }
  .banderas {
    display: inline-block;
    width: 50px;
    margin: 4px;
    transition: all 0.2s ease-out;
  }
  .interruptores-para-idioma:hover .banderas {
    transform: scale(1.18);
    cursor: pointer;
  }
  .experience {
    margin-bottom: 5rem;
  }
  .title {
    display: flex;
    align-items: center;
  }
  .foto-container {
    margin: 0 auto 30px auto;
    position: relative;
    height: 117px;
    width: 117px;
    border-radius: 50%;
    overflow: hidden;
  }
  .foto {
    position: absolute;
    top: 65px;
    left: 6px;
    scale: 3.5;
  }
  .foto-container-recortada {
    position: relative;
    height: 117px;
    width: 117px;
    border-radius: 50%;
    overflow: hidden;
  }
  .foto {
    position: absolute;
    top: 65px;
    left: 6px;
    scale: 3.5;
  }
  .icons-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 50px;
    height: 50px;
    margin-bottom: 2rem;
  }
  .icon-container {
    height: 44px;
    width: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--rounded-btn, .5rem);
  }
  .icon {
    width: 100%;
    height: auto;
    transition-duration: 150ms;
    transition-timing-function: ease-in-out;
    box-sizing: content-box;
  }
  @media(hover: hover) and (pointer: fine) {
    .icon:hover {
      scale: 1.3;
    }
  }
  @media (min-width:320px)  { /* smartphones, iPhone, portrait 480x320 phones */ }
  @media (max-width:480px)  {}
  @media (max-width:640px)  {
    main {
      width: 100%;
      padding-left: 20px;
      padding-right: 10px;
    }
  }
  @media (min-width:961px)  { /* tablet, landscape iPad, lo-res laptops ands desktops */ }
  @media (min-width:1025px) { /* big landscape tablets, laptops, and desktops */ }
  @media (min-width:1281px) { /* hi-res laptops and desktops */ }

</style>
