---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
import LinkedInIcon from "src/images/LinkedInIcon.astro";
import MailIcon from "../images/MailIcon.astro"
const { sideBarActiveItemID } = Astro.props;
---

<div class="z-40 sidebar">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col">
    <div class="w-fit mx-auto mt-5">
      <a href="/">
        <div class="avatar transition ease-in-out hover:scale-[102%] block m-auto">
          <div class="w-[8.5rem]">
            <Image class="mask mask-circle" format="webp" width={300} height={300} src="/profile.webp" alt="Profile image" />
          </div>
        </div>
      </a>
    </div>
    <div class="icons-bar">
      <div class="icon-container">
        <LinkedInIcon class="icon"/>
      </div>
      <div class="icon-container hover:bg-gray-300">
        <MailIcon class="icon"/>
      </div>
    </div>
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
  </aside>
</div>

<style>
  .sidebar {
    display: none;
  }
  .icons-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 50px;
    height: 50px;
  }
  .icon-container {
    height: 50px;
    width: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--rounded-btn, .5rem);
  }
  .icon-container:hover {
    background-color: #D9D9D9;;
  }
  .icon {
    width: 30px;
    height: auto;
  }
</style>
